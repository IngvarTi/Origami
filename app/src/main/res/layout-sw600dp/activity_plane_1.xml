<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffff"
    tools:context="com.mittereflores.origami.Plane_1_Activity"
    android:id="@+id/actPlane_1">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="@dimen/button_image_size_600_width"
                android:layout_height="@dimen/button_image_size_600_height"
                android:id="@+id/vectorImage"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textPlane_1_1"
                android:id="@+id/textMovingPlane11"
                android:textSize="@dimen/button_name_size_height"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/button_image_vertical_600_margin" />

            <ImageView
                android:layout_width="@dimen/button_image_size_600_width"
                android:layout_height="@dimen/button_image_size_600_height"
                android:id="@+id/vectorImage1"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textPlane_1_2"
                android:id="@+id/textMovingPlane12"
                android:textSize="@dimen/button_name_size_height"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/button_image_vertical_600_margin" />

            <ImageView
                android:layout_width="@dimen/button_image_size_600_width"
                android:layout_height="@dimen/button_image_size_600_height"
                android:id="@+id/vectorImage2"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textPlane_1_3"
                android:id="@+id/textMovingPlane13"
                android:textSize="@dimen/button_name_size_height"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/button_image_vertical_600_margin" />

            <ImageView
                android:layout_width="@dimen/button_image_size_600_width"
                android:layout_height="@dimen/button_image_size_600_height"
                android:id="@+id/vectorImage3"
                android:layout_gravity="center_horizontal" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textPlane_1_4"
                android:id="@+id/textMovingPlane14"
                android:textSize="@dimen/button_name_size_height"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/button_image_vertical_600_margin" />

            <ImageView
                android:layout_width="@dimen/button_image_size_600_width"
                android:layout_height="@dimen/button_image_size_600_height"
                android:id="@+id/vectorImage4"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textPlane_1_5"
                android:id="@+id/textMovingPlane15"
                android:textSize="@dimen/button_name_size_height"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/button_image_vertical_600_margin" />

            <ImageView
                android:layout_width="@dimen/button_image_size_600_width"
                android:layout_height="@dimen/button_image_size_600_height"
                android:id="@+id/vectorImage5"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/textPlane_1_6"
                android:id="@+id/textMovingPlane16"
                android:textSize="@dimen/button_name_size_height"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/button_image_vertical_600_margin" />

            <ImageView
                android:layout_width="@dimen/button_image_size_600_width"
                android:layout_height="@dimen/button_image_size_600_height"
                android:id="@+id/vectorImage6"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/finished"
                android:id="@+id/textMovingPlane17"
                android:textSize="@dimen/button_name_size_height"
                android:layout_gravity="center_horizontal"
                android:textColor="#000000"
                android:layout_marginBottom="@dimen/button_image_vertical_600_margin" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>
